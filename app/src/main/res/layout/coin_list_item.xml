<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#dfdfdf"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coin_item_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/coin_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/coin_item_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/coin_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_difference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_difference_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coin_item_pdc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>